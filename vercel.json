{
  "buildCommand": "vite build",
  "outputDirectory": "build",
  "functions": {
    "api/auth.js": {
      "maxDuration": 10
    },
    "api/health.js": {
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
